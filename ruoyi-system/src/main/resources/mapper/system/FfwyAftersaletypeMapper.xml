<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FfwyAftersaletypeMapper">
    
    <resultMap type="FfwyAftersaletypeVo" id="FfwyAftersaletypeVoResult">
        <result property="afterType"    column="after_type"    />
        <result property="orderNumber"    column="order_number"    />
        <result property="problemDescription"    column="problem_description"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>
    
    <select id="selectFfwyOrderDetailsByorderDetailsId" parameterType="Integer" resultMap="FfwyAftersaletypeVoResult">
        SELECT
        t2.after_type,
        t1.create_time,
        t1.order_number,
        t1.problem_description
        FROM
        `ffwy_after_sale` t1,
        ffwy_after_type	t2
        <where> t1.order_details_id = #{orderDetailsId} and t1.after_type = t2.after_type_id</where>
    </select>
   
</mapper>