<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FfwyAreaMapper">
    
    <resultMap type="FfwyArea" id="FfwyAreaResult">
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="perentCode"    column="perent_code"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectFfwyAreaVo">
        select code, name, perent_code, create_time from ffwy_area
    </sql>

    <select id="selectFfwyAreaList" parameterType="FfwyArea" resultMap="FfwyAreaResult">
        <include refid="selectFfwyAreaVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="perentCode != null  and perentCode != ''"> and perent_code = #{perentCode}</if>
        </where>
    </select>
    
    <select id="selectFfwyAreaById" parameterType="String" resultMap="FfwyAreaResult">
        <include refid="selectFfwyAreaVo"/>
        where code = #{code}
    </select>
        
    <insert id="insertFfwyArea" parameterType="FfwyArea">
        insert into ffwy_area
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="perentCode != null">perent_code,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null">#{code},</if>
            <if test="name != null">#{name},</if>
            <if test="perentCode != null">#{perentCode},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateFfwyArea" parameterType="FfwyArea">
        update ffwy_area
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="perentCode != null">perent_code = #{perentCode},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where code = #{code}
    </update>

    <delete id="deleteFfwyAreaById" parameterType="String">
        delete from ffwy_area where code = #{code}
    </delete>

    <delete id="deleteFfwyAreaByIds" parameterType="String">
        delete from ffwy_area where code in 
        <foreach item="code" collection="array" open="(" separator="," close=")">
            #{code}
        </foreach>
    </delete>
</mapper>