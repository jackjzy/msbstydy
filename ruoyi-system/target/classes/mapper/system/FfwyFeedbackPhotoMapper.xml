<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FfwyFeedbackPhotoMapper">
    
    <resultMap type="FfwyFeedbackPhoto" id="FfwyFeedbackPhotoResult">
        <result property="photoId"    column="photo_id"    />
        <result property="feedbackId"    column="feedback_id"    />
        <result property="path"    column="path"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectFfwyFeedbackPhotoVo">
        select photo_id, feedback_id, path, create_time from ffwy_feedback_photo
    </sql>

    <select id="selectFfwyFeedbackPhotoList" parameterType="FfwyFeedbackPhoto" resultMap="FfwyFeedbackPhotoResult">
        <include refid="selectFfwyFeedbackPhotoVo"/>
        <where>  
            <if test="feedbackId != null "> and feedback_id = #{feedbackId}</if>
            <if test="path != null  and path != ''"> and path = #{path}</if>
        </where>
    </select>
    
    <select id="selectFfwyFeedbackPhotoById" parameterType="Long" resultMap="FfwyFeedbackPhotoResult">
        <include refid="selectFfwyFeedbackPhotoVo"/>
        where photo_id = #{photoId}
    </select>
        
    <insert id="insertFfwyFeedbackPhoto" parameterType="java.util.List">
        insert into ffwy_feedback_photo(feedback_id,path,create_time)
        VALUES
        <foreach collection="list" index="index" item="feedBack" separator=",">
            (
            #{feedBack.feedbackId}, #{feedBack.path}, #{feedBack.createTime}

            )

        </foreach>
    </insert>

    <update id="updateFfwyFeedbackPhoto" parameterType="FfwyFeedbackPhoto">
        update ffwy_feedback_photo
        <trim prefix="SET" suffixOverrides=",">
            <if test="feedbackId != null">feedback_id = #{feedbackId},</if>
            <if test="path != null">path = #{path},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where photo_id = #{photoId}
    </update>

    <delete id="deleteFfwyFeedbackPhotoById" parameterType="Long">
        delete from ffwy_feedback_photo where photo_id = #{photoId}
    </delete>

    <delete id="deleteFfwyFeedbackPhotoByIds" parameterType="String">
        delete from ffwy_feedback_photo where photo_id in 
        <foreach item="photoId" collection="array" open="(" separator="," close=")">
            #{photoId}
        </foreach>
    </delete>
</mapper>