    </resultMap>

    <sql id="SELECT_USER_BY_ID">
                select fu.user_id, fu.user_name, password, photo, age, birthday,
         city, user_type, intro, fu.phonenumber, wechat_id, iphone_id,
         fu.create_time, fu.update_time, user_status, user_account,sex,login_time,
		 default_addr,default_bank_card,fr.role_id,fr.role_name,fu.worker_photo,
		 fu.worker_name,fu.em_id,fu.em_key,token,fs.shop_id
          from ffwy_user fu LEFT JOIN ffwy_role fr on fu.root_id =fr.role_id
					LEFT JOIN  ffwy_shop fs on fu.user_id = fs.user_id

    </sql>



    <sql id="SELECT_USER_BY_SUM">
               SELECT count(*) as sum FROM ffwy_order_combomeal

    </sql>

    <sql id="selectFfwyUserVo">
           select fu.user_id, user_name, password, photo, age, birthday,
         city, user_type, intro, phonenumber, wechat_id, iphone_id,
         fu.create_time, fu.update_time, user_status, user_account,sex,login_time,
		 default_addr,default_bank_card,fr.role_id,fr.role_name,fu.worker_photo,
		 fu.worker_name,fu.em_id,fu.em_key,token
          from ffwy_user fu Inner JOIN ffwy_role fr on fu.root_id =fr.role_id
    </sql>
    <sql id="SELECT_USER_FANS">
        select fu2.user_id, fu2.user_name, fu2.intro,fu2.photo
          from  ffwy_user_fans fuf
		LEFT JOIN  ffwy_user fu2 on fuf.fans_id =fu2.user_id
    </sql>
    <sql id="SELECT_USER_ATTENTION">
        select fu2.user_id, fu2.user_name, fu2.intro,fu2.photo
          from  ffwy_user_fans fuf
		LEFT JOIN  ffwy_user fu2 on fuf.user_id =fu2.user_id
    </sql>
    <sql id="SELECT_USER_COUNT">
        select COUNT(accent_id)
          from  ffwy_user_fans fuf
			 LEFT JOIN  ffwy_user fu2 on fuf.fans_id =fu2.user_id
    </sql>

    <select id="selectFfwyUserList" parameterType="FfwyUser" resultMap="FfwyUserResult">
        <include refid="selectFfwyUserVo"/>
        <where>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
            <if test="photo != null  and photo != ''"> and photo = #{photo}</if>
            <if test="age != null "> and age = #{age}</if>
            <if test="sex != null "> and sex = #{sex}</if>
            <if test="birthday != null "> and birthday = #{birthday}</if>
            <if test="city != null  and city != ''"> and city like concat('%', #{city}, '%') </if>
            <if test="emId != null  and emId != ''"> and emId = #{em_id}</if>
            <if test="emKey != null  and emKey != ''"> and emKey = #{em_key}</if>
            <if test="userType != null  and userType != ''"> and user_type = #{userType}</if>
            <if test="intro != null  and intro != ''"> and intro = #{intro}</if>
            <if test="phonenumber != null  and phonenumber != ''"> and phonenumber = #{phonenumber}</if>
            <if test="wechatId != null  and wechatId != ''"> and wechat_id = #{wechatId}</if>
            <if test="iphoneId != null  and iphoneId != ''"> and iphone_id = #{iphoneId}</if>
            <if test="userStatus != null  and userStatus != ''"> and user_status = #{userStatus}</if>
            <if test="userAccount != null "> and user_account = #{userAccount}</if>
            <if test="workerName != null "> and worker_name like concat('%', #{workerName}, '%')</if>
            <if test="searchStr!=null and searchStr!=''">
                AND
                CONCAT(userName,userType,userStatus) LIKE CONCAT ('%', #{searchStr},'%')
            </if>

            <if test="beginLoginTime != null  and endLoginTime != null">
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{beginLoginTime},'%y%m%d')
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{endLoginTime},'%y%m%d')
            </if>
            <if test="betweenAge != null ">
                AND
                <if test="betweenAge == 1 ">
                     age &lt; 18
                </if>
                <if test="betweenAge == 2 ">
                   18 &lt;= age AND  age &lt; 30
                </if>
                <if test="betweenAge == 3 ">
                    30 &lt;= age AND  age &lt; 40
                </if>
                <if test="betweenAge == 4 ">
                    40 &lt;= age AND  age &lt; 50
                </if>
                <if test="betweenAge == 5 ">
                    50 &lt;= age
                </if>

             </if>

        </where>
        ORDER BY fu.user_id desc
    </select>

    <select id="selectFfwyUserByFans" parameterType="Long" resultMap="FfwyUserResult">
        <include refid="SELECT_USER_FANS"/>
        where fuf.user_id = #{userId}
    </select>

    <select id="selectFfwyUserByFansCount" parameterType="Long" resultType="java.lang.Integer">
        <include refid="SELECT_USER_COUNT"/>
        where fuf.user_id = #{userId}
    </select>
    <select id="selectFfwyUserByAttention" parameterType="Long" resultMap="FfwyUserResult">
        <include refid="SELECT_USER_ATTENTION"/>
        where fuf.fans_id = #{userId}
    </select>


    <select id="selectFfwyUserAndFans" parameterType="Long" resultMap="FfwyUserResult">
        select user_id
          from  ffwy_user_fans
        where user_id = #{userId} and fans_id=#{fansId}
    </select>


    <select id="selectFfwyUserByAttentionCount" parameterType="Long" resultType="java.lang.Integer">
        <include refid="SELECT_USER_COUNT"/>
        where fuf.fans_id = #{userId}
    </select>



    <select id="selectFfwyUserById" parameterType="Long" resultMap="FfwyUserResult">
        <include refid="SELECT_USER_BY_ID"/>
        where fu.user_id = #{userId}
    </select>

    <select id="selectFfwyUserByToken" parameterType="String" resultMap="FfwyUserResult">
        <include refid="SELECT_USER_BY_ID"/>
        where token = #{token}
    </select>

    <select id="selectFfwyUserId" parameterType="Long" resultMap="FfwyUserResult">
        <include refid="SELECT_USER_BY_ID"/>
        where fu.user_id = #{userId}
    </select>

