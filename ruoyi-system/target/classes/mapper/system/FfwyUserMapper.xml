    </update>

    <delete id="deleteFfwyUserById" parameterType="Long">
        delete from ffwy_user where user_id = #{userId}
    </delete>

    <delete id="deleteFfwyUserByFans" parameterType="Long">
        delete from ffwy_user_fans where user_id = #{userId} and fans_id=#{fansId}
    </delete>
    <delete id="deleteFfwyUserByIds" parameterType="String">
        delete from ffwy_user where user_id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

    <select id="selectFfwyWorkplanUserList" parameterType="ffwyUser" resultMap="FfwyUserResult">
