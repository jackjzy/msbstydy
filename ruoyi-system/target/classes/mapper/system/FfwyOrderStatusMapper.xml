<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.order.FfwyOrderStatusMapper">
    
    <resultMap type="FfwyOrderStatus" id="FfwyOrderStatusResult">
        <result property="statusId"    column="status_id"    />
        <result property="statusName"    column="status_name"    />
    </resultMap>

    <sql id="selectFfwyOrderStatusVo">
        select status_id, status_name from ffwy_order_status
    </sql>

    <select id="selectFfwyOrderStatusList" parameterType="FfwyOrderStatus" resultMap="FfwyOrderStatusResult">
        <include refid="selectFfwyOrderStatusVo"/>
        <where>  
            <if test="statusName != null  and statusName != ''"> and status_name like concat('%', #{statusName}, '%')</if>
        </where>
    </select>
    
    <select id="selectFfwyOrderStatusById" parameterType="Long" resultType="String">
        select status_name from ffwy_order_status
        where status_id = #{statusId}
    </select>
        
    <insert id="insertFfwyOrderStatus" parameterType="FfwyOrderStatus" useGeneratedKeys="true" keyProperty="statusId">
        insert into ffwy_order_status
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="statusName != null">status_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="statusName != null">#{statusName},</if>
         </trim>
    </insert>

    <update id="updateFfwyOrderStatus" parameterType="FfwyOrderStatus">
        update ffwy_order_status
        <trim prefix="SET" suffixOverrides=",">
            <if test="statusName != null">status_name = #{statusName},</if>
        </trim>
        where status_id = #{statusId}
    </update>

    <delete id="deleteFfwyOrderStatusById" parameterType="Long">
        delete from ffwy_order_status where status_id = #{statusId}
    </delete>

    <delete id="deleteFfwyOrderStatusByIds" parameterType="String">
        delete from ffwy_order_status where status_id in 
        <foreach item="statusId" collection="array" open="(" separator="," close=")">
            #{statusId}
        </foreach>
    </delete>
    
</mapper>