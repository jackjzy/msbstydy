<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.video.FfwyVideoCommentMapper">
    
    <resultMap type="FfwyVideoComment" id="FfwyVideoCommentResult">
        <result property="videoCommentId"    column="video_comment_id"    />
        <result property="videoId"    column="video_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="videoComment"    column="video_comment"    />
        <result property="userId"    column="user_id"    />
        <result property="userName" column="user_name"></result>
        <result property="photo" column="photo"></result>
        <result property="commentTime"    column="comment_time"    />
        <result property="commentTime"    column="comment_time"    />
        <result property="commentId"    column="commentId"    />
    </resultMap>

    <sql id="selectFfwyVideoCommentVo">
       select video_comment_id, video_id, parent_id, video_comment, fvc.user_id, comment_time,
        fu.user_name,fu.photo
        from ffwy_video_comment fvc left JOIN ffwy_user fu on fvc.user_id=fu.user_id
    </sql>

    <select id="selectFfwyVideoCommentList" parameterType="FfwyVideoComment" resultMap="FfwyVideoCommentResult">
        <include refid="selectFfwyVideoCommentVo"/>
        <where>  
            <if test="videoId != null "> and video_id = #{videoId}</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="videoComment != null  and videoComment != ''"> and video_comment = #{videoComment}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="commentTime != null "> and comment_time = #{commentTime}</if>
        </where>
        ORDER BY  comment_time DESC
    </select>
    
    <select id="selectFfwyVideoCommentById" parameterType="Long" resultMap="FfwyVideoCommentResult">
        <include refid="selectFfwyVideoCommentVo"/>
        where video_comment_id = #{videoCommentId}
    </select>

    <select id="selectFfwyVideoComment" parameterType="Long" resultMap="FfwyVideoCommentResult">
        <include refid="selectFfwyVideoCommentVo"/>
        where video_id = #{videoId}  ORDER BY video_comment_id DESC  LIMIT 1
    </select>

    <select id="selectFfwyVideoCommentCount" parameterType="Long" resultType="Integer">
         select COUNT(*)
        from ffwy_video_comment WHERE video_id=#{videoId}
    </select>
    <select id="selectFfwyVideoCommentCounts" parameterType="FfwyVideoComment" resultMap="FfwyVideoCommentResult">
         select COUNT(video_id) commentId
        from ffwy_video_comment WHERE video_id=#{videoId}
    </select>
        
    <insert id="insertFfwyVideoComment" parameterType="FfwyVideoComment" useGeneratedKeys="true" keyProperty="videoCommentId">
        insert into ffwy_video_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="videoId != null">video_id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="videoComment != null">video_comment,</if>
            <if test="userId != null">user_id,</if>
            <if test="commentTime != null">comment_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="videoId != null">#{videoId},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="videoComment != null">#{videoComment},</if>
            <if test="userId != null">#{userId},</if>
            <if test="commentTime != null">#{commentTime},</if>
         </trim>
    </insert>

    <update id="updateFfwyVideoComment" parameterType="FfwyVideoComment">
        update ffwy_video_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="videoId != null">video_id = #{videoId},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="videoComment != null">video_comment = #{videoComment},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="commentTime != null">comment_time = #{commentTime},</if>
        </trim>
        where video_comment_id = #{videoCommentId}
    </update>

    <delete id="deleteFfwyVideoCommentById" parameterType="Long">
        delete from ffwy_video_comment where video_comment_id = #{videoCommentId}
    </delete>

    <delete id="deleteFfwyVideoCommentByIds" parameterType="String">
        delete from ffwy_video_comment where video_comment_id in 
        <foreach item="videoCommentId" collection="array" open="(" separator="," close=")">
            #{videoCommentId}
        </foreach>
    </delete>
</mapper>