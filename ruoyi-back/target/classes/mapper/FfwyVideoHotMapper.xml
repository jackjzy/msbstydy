<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.back.mapper.FfwyVideoHotMapper">
    
    <resultMap type="FfwyVideoHot" id="FfwyVideoHotResult">
        <result property="hotId"    column="hot_id"    />
        <result property="hotName"    column="hot_name"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <collection property="videos" javaType="java.util.ArrayList" ofType="FfwyVideoHots">
            <result property="videoHotId" column="video_hot_id"></result>
            <result property="videoName" column="video_name"></result>
        </collection>
    </resultMap>

    <sql id="selectFfwyVideoHotVo">
        select hot_id, hot_name, create_time, update_time from ffwy_video_hot
    </sql>

    <sql id="SELECT_HOT_VIDEO">
            select fvt.hot_id, hot_name, fvt.create_time, update_time,fvh.video_hot_id,fvh.video_name

            from ffwy_video_hot fvt

			left JOIN ffwy_video_hots fvh on fvt.hot_id=fvh.hot_id

    </sql>

    <select id="selectFfwyVideoHotList" parameterType="FfwyVideoHot" resultMap="FfwyVideoHotResult">
        <include refid="SELECT_HOT_VIDEO"/>
        <where>  
            <if test="hotName != null  and hotName != ''"> and hot_name like concat('%', #{hotName}, '%')</if>
            <if test="beginTime != null "> and fvt.create_time &gt;=#{beginTime} </if>
            <if test="endTime != null "> and fvt.create_time &lt;= #{endTime} </if>
        </where>
    </select>
    
    <select id="selectFfwyVideoHotById" parameterType="Integer" resultMap="FfwyVideoHotResult">
        <include refid="selectFfwyVideoHotVo"/>
        where hot_id = #{hotId}
    </select>
        
    <insert id="insertFfwyVideoHot" parameterType="FfwyVideoHot" useGeneratedKeys="true" keyProperty="hotId">
        insert into ffwy_video_hot
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="hotName != null">hot_name,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="hotName != null">#{hotName},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateFfwyVideoHot" parameterType="FfwyVideoHot">
        update ffwy_video_hot
        <trim prefix="SET" suffixOverrides=",">
            <if test="hotName != null">hot_name = #{hotName},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where hot_id = #{hotId}
    </update>

    <delete id="deleteFfwyVideoHotById" parameterType="Integer">
        delete from ffwy_video_hot where hot_id = #{hotId}
    </delete>

    <delete id="deleteFfwyVideoHotByIds" parameterType="String">
        delete from ffwy_video_hot where hot_id in 
        <foreach item="hotId" collection="array" open="(" separator="," close=")">
            #{hotId}
        </foreach>
    </delete>
</mapper>